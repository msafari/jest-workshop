{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "standard"
  ],
  "plugins": [
      "standard",
      "promise",
      "react",
      "jest"
  ],
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error",
          "log"
        ]
      }
    ],
    "no-global-assign": [
      "error",
      {
        "exceptions": [
          "fetch"
        ]
      }
    ],
     "strict": 0
  }
}
